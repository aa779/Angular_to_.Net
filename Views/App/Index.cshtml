@{
    ViewBag.Title = "Homepage";
}
<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/VanGogh.jpg" alt="" />
            <h3>Mug</h3>
            <ul class="product-props">
                <li>
                    <strong>Price: </strong>R$9,99
                </li>
                <li>
                    <strong>Artist: </strong>Van Gogh
                </li>
                <li>
                    <strong>Title: </strong>
                </li>
                <li>
                    <strong>Description: </strong>Self portrait
                </li>
            </ul>
            <button id="buy-button" class="btn btn-success">Buy</button>
        </div>

        <div id="the-form">
            <form>
                <label>Your name</label>
                <input type="text" value="" /><br />
                <label>Email</label>
                <input type="text" value="" /><br />
                <label>Subject</label>
                <input type="text" value="" /><br />
                <label>Message</label>
                <textarea rows="4"></textarea><br />
                <input type="submit" value="Send Message" /><br />
            </form>
        </div>
        <div>
            <div id="login-toggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input type="text" value="" />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" value="" />
                </div>
                <div>
                    <input type="checkbox" value="" />
                    <label>Remember me?</label>
                </div>
                <div>
                    <input type="submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">Testing bootstrap grid division </div>
</div>
