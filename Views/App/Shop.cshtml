@model IEnumerable<Product>
@section Scripts {
    <script src="~/ts/storecustomer.js"></script>
    <script src="~/ts/main.js"></script>
}
<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="border bg-light rounded p-1">
                <img src="~/img/@(p.ArtId).jpg" alt="@p.Title" class="img-fluid" />
                <h3>@p.Category - @p.Size</h3>
                <ul>
                    <li><strong>Price: </strong>R$@p.Price.</li>
                    <li><strong>Artist: </strong>@p.Artist</li>
                    <li><strong>Title: </strong>@p.Title</li>
                    <li><strong>Description: </strong>@p.ArtDescription</li>
                </ul>
                <button id="buy-button" class="btn btn-success">Buy</button>
            </div>
        </div>
    }
</div>
